<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash_screen_background_gradient"
    tools:context=".SplashScreenActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashImageViewId"
            android:layout_width="300sp"
            android:layout_height="180sp"
            android:padding="10sp"
            android:src="@drawable/client_chat_logo"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/splashTextViewId"
            android:padding="20sp"
            android:layout_width="wrap_content"
            android:typeface="serif"
            android:textSize="25sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/splash_screen_text"
            android:textColor="#740A69"
            />
    </LinearLayout>

</RelativeLayout>